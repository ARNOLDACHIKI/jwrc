generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String?
  phone        String?
  location     String?
  bio          String?
  profileImage String?
  role         String   @default("member")
  password     String?
  isVolunteer  Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Sermon {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  summary   String?
  content   String?
  speaker   String?
  date      DateTime
  createdAt DateTime @default(now())
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  location    String?
  startsAt    DateTime
  endsAt      DateTime?
  createdAt   DateTime @default(now())
}

model Announcement {
  id        String   @id @default(uuid())
  title     String
  content   String
  author    String?
  postedAt  DateTime @default(now())
}

model Donation {
  id        String   @id @default(uuid())
  donorName   String?
  donorEmail  String?
  amount      Float
  currency    String?  @default("USD")
  kesAmount   Int?
  method      String?
  note        String?
  createdAt   DateTime @default(now())
}

model EventSignup {
  id          String    @id @default(uuid())
  eventId     String
  ref         String?   @unique
  name        String
  email       String
  phone       String?
  ticketSent  Boolean   @default(false)
  checkedIn   Boolean   @default(false)
  checkedInAt DateTime?
  createdAt   DateTime  @default(now())
}

model MpesaDonation {
  id                 Int      @id @default(autoincrement())
  amount             Float
  phone              String
  accountReference   String?
  transactionDesc    String?
  merchantRequestId  String?
  checkoutRequestId  String?
  status             String   @default("pending")
  mpesaTransactionId String?
  responseCode       String?
  responseDescription String?
  providerResponse   Json?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Reminder {
  id          String   @id @default(uuid())
  title       String
  message     String
  isActive    Boolean  @default(true)
  template    String?  // e.g., "midweek", "youth", "sunday", "custom"
  createdBy   String?  // admin user id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WeeklyProgram {
  id        String   @id @default(uuid())
  name      String
  day       String   // e.g., "Monday", "Wednesday", "Sunday"
  time      String   // e.g., "6:00 PM", "10:00 AM"
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WeeklyWord {
  id        String   @id @default(uuid())
  title     String   // e.g., "Faith", "Hope", "Love"
  theme     String   // The weekly theme/message
  scripture String?  // Optional Bible verse reference
  content   String   // Detailed content/devotional
  isActive  Boolean  @default(true)
  weekStart DateTime // Start of the week this applies to
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
